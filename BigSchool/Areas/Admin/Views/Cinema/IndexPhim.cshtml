@model IEnumerable<BigSchool.Models.Phim>

@{
    ViewBag.Title = "IndexPhim";
}

<h2>IndexPhim</h2>

<p>
    @Html.ActionLink("Create New", "CreatePhim")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Maphim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tenphim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thoiluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngaykhoichieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Daodien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Namsx)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matheloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apphich)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Maphim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenphim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoiluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaykhoichieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Daodien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Namsx)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matheloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theloai)
            </td>
            <td>
                <img src="~/Content/img/@item.Apphich" />
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPhim", new { id = item.Maphim }) |
                @Html.ActionLink("Details", "DetailsPhim", new { id = item.Maphim }) |
                @Html.ActionLink("Delete", "DeletePhim", new { id = item.Maphim })
            </td>
        </tr>
    }

</table>
