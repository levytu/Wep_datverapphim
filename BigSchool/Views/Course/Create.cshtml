@model BigSchool.ModelsView.CourseViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using(Html.BeginForm("Create","Course"))
{   
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.Place)
        @Html.TextBoxFor(x => x.Place, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Place)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Time)
        @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Category)
        @Html.DropDownListFor(x => x.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Category)
    </div>
    <button type="submit" value="Save" class="btn btn-primary">Save</button>
    @section scripts{
        @Scripts.Render("~/bundles/jqueryval")}

}